<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.example.abhishek.knocksense">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".components.GlobalLists"
        android:allowBackup="true"
        android:icon="@mipmap/knocksenseapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivityScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".components.ArticleListView"
            android:screenOrientation="portrait"/>
        <activity android:name=".SelectCityScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".CategoryOrAuthorScreen"
            android:parentActivityName=".MainActivityScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".WebViewScreen" />
        <activity android:name=".SearchResultsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>

</manifest>