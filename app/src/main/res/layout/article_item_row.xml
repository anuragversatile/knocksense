<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7.5dp"
 >
   <LinearLayout
       android:layout_width="match_parent"
       android:paddingRight="3dp"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/featuredImage"
           android:layout_width="0.81in"
           android:layout_height="0.56in"
           android:scaleType="fitXY"
           />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical">


           <TextView
               android:id="@+id/article_item_row_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxLines="2"
               android:paddingLeft="7.45dp"
               android:text="Here we will have some text which will be at most 3 lines ling after which it will truncate"
               android:textStyle="bold"
               android:textSize="13sp"
               android:textColor="@color/black_overlay"
               />


           <TextView
               android:id="@+id/article_item_row_author"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxLines="1"
               android:paddingLeft="7.45dp"
               android:text="KnockSense"
               android:textStyle="bold"

               android:textSize="12sp"



               android:textColor="@color/black_overlay"/>

           <TextView
               android:id="@+id/article_item_row_date"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:maxLines="1"
               android:paddingLeft="7.45dp"
               android:textStyle="bold"

               android:textSize="11sp"

               android:textColor="@color/black_overlay"/>

       </LinearLayout>

       <ImageView
           android:id="@+id/article_item_row_more"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:src="@drawable/ic_more_vert_black_24dp" />

   </LinearLayout>

</LinearLayout>
