<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingTop="15dp">
    <!--TODO imageview and contentview must be separately tap able -->
    <ImageView
        android:id="@+id/list_view_item_row_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:paddingRight="15dp"
        android:src="@mipmap/knocksense" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="7.45dp">

        <TextView
            android:id="@+id/list_view_item_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Here we will have some text which will be at most 3 lines ling after which it will truncate" />

        <TextView
            android:id="@+id/list_view_item_row_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Author name" />

        <TextView
            android:id="@+id/list_view_item_row_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="12/06/17" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_view_item_row_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp" />
</LinearLayout>