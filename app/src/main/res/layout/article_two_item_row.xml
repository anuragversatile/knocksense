<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    android:gravity="fill"
    android:weightSum="1">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/article_two_item_row_left_relative_layout"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="1.25in"
            android:layout_height="0.8in"
            android:scaleType="fitXY"
            android:id="@+id/two_item_row_left_image"
            android:padding="10dp"/>
        <ImageView
            android:id="@+id/article_item_row_more_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_more_vert_white_24dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view_type_left"
            android:paddingRight="32dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/two_item_row_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_overlay"
                android:maxLines="3"
                android:paddingLeft="7.45dp"


            android:text="this is text which will truncate after three lines.....jajajsbhgcsdjcbdsjcsbvjvhsvjchsjhvcsjcbsdcnskjcbksudhcskjcbkscksjcbksbcdasdasdasdadsaiusbdsjchgkjgthve ghgk jrhg hu rhjrh kjrhkj hh kjhrkthkrjh jhjkh krjhk END" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_item_row_left_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="15dp"
                     />

                <TextView
                    android:id="@+id/two_item_row_left_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                     />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/article_two_item_row_right_relative_layout"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="1.25in"
            android:layout_height="0.8in"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:id="@+id/two_item_row_right_image"/>
        <ImageView
            android:id="@+id/article_item_row_more_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_more_vert_white_24dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view_type"
            android:paddingRight="32dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/two_item_row_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="5dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_overlay"
                android:maxLines="3"
                android:paddingLeft="7.45dp"
            android:text="this is text which will truncate after three lines.....jajajsbhgcsdjcbdsjcsbvjvhsvjchsjhvcsjcbsdcnskjcbksudhcskjcbkscksjcbksbcdasdasdasdadsaiusbdsjchgkjgthve ghgk jrhg hu rhjrh kjrhkj hh kjhrkthkrjh jhjkh krjhk END" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_item_row_right_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="15dp"
                   />

                <TextView
                    android:id="@+id/two_item_row_right_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                 />
            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>
</LinearLayout>